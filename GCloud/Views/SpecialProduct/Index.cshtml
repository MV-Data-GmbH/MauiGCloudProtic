@model IEnumerable<GCloud.Models.Domain.SpecialProduct>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "SpecialProduct")" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        Hinzufügen
    </a>
</p>
<table class="table">
    <tr>
        <th>
           Manager
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Enabled)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.CreatedUser.FirstName)  @Html.DisplayFor(modelItem => item.CreatedUser.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShortDescription)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Value)
    </td>
    @*<td>
            @Html.DisplayFor(modelItem => item.Enabled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDeleted)
        </td>*@
    <td>
        <a href="@Url.Action("Edit", new {id = item.Id})" class="btn btn-default" data-toggle="tooltip" data-placement="left" title="Bearbeiten">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a> 
        @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
        <a href="@Url.Action("Delete", new {id = item.Id})" class="btn btn-danger" data-toggle="tooltip" data-placement="left" title="Löschen">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </a>
    </td>
</tr>
}

</table>
