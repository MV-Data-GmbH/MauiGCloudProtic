@model GCloud.Controllers.ViewModels.Home.HomeResetPasswordUserModel

@{
    ViewBag.Title = "Passwort zurücksetzen";
}

<div class="container">
    <div id="passwordreset" style="margin-top:50px">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Passwort zurücksetzen</div>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    @using (Html.BeginForm("ResetPassword", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.OldPassword, new { @class = "control-label col-md-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PasswordNew, new { @class = "control-label col-md-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.PasswordNew, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PasswordNew, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.PasswordNewRepeat, new { @class = "control-label col-md-3" })
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.PasswordNewRepeat, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PasswordNewRepeat, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <!-- Button -->
                            <div class="  col-sm-offset-3 col-sm-9">
                                <button id="btn-signup" type="submit" class="btn btn-success">Passwort Ändern</button>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
