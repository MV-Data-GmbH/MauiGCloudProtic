<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GCloudPhone.Views.Shop.OrderProccess.ChooseLanguage"
             NavigationPage.HasNavigationBar="False">
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <Frame BackgroundColor="White" Padding="20">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLanguageTapped" CommandParameter="German"/>
                </Frame.GestureRecognizers>
                <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                    <Image Source="hungary.png"/>
                    <Label Text="nemački" HorizontalOptions="Center" FontAttributes="Bold" />
                </StackLayout>
            </Frame>
            
            <Frame BackgroundColor="White" Padding="20">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLanguageTapped" CommandParameter="English"/>
                </Frame.GestureRecognizers>
                <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                    <Image Source="hungary.png"/>
                    <Label Text="engleski" HorizontalOptions="Center" FontAttributes="Bold" />
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" Padding="20">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLanguageTapped" CommandParameter="Hungarian"/>
                </Frame.GestureRecognizers>
                <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                    <Image Source="hungary.png"/>
                    <Label Text="mađarski" HorizontalOptions="Center" FontAttributes="Bold" />
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>