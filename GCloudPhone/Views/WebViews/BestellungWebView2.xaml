<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GCloudPhone.Views.WebViews.BestellungWebView2"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             Title="" NavigationPage.HasNavigationBar="False" Shell.NavBarIsVisible="False">
    <ContentPage.Behaviors>
        <mct:StatusBarBehavior StatusBarColor="{StaticResource Zuta}" />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto, *">
   

        <Button Text="HAUPTSEITE" TextColor="{StaticResource Tertiary}" BackgroundColor="{StaticResource Zuta}" Clicked="Button_Clicked" Grid.Row="0"/>

        <WebView x:Name="webView" Grid.Row="1" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" />

    </Grid>

</ContentPage>