<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GCloudPhone.Views.SplashScreenPage"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False"
    Background="{StaticResource AccentOrangeLight}"
    >

    <Grid RowDefinitions="Auto,Auto"
          VerticalOptions="Center"
          Style="{StaticResource BasicGrid}"
          RowSpacing="20">

        <!-- Logo: sada 100x100 px, Scale na 0.25 za još manji početak -->
        <Image
            x:Name="LogoImage"
            Grid.Row="0"
            Source="logoimage.png"
            Opacity="1"
            Scale="0.25"                     
            WidthRequest="150"
        
            HeightRequest="150"

            HorizontalOptions="Center"
            VerticalOptions="Center" />

            <!-- Loading tekst -->
            <Label 
            x:Name="LoadingLabel"
            Grid.Row="1"
            FontFamily="Quicksand-Bold"
            FontSize="20"
            TextColor="White"
            Opacity="0"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Margin="0,20"
            HorizontalTextAlignment="Center" />
    </Grid>
</ContentPage>
