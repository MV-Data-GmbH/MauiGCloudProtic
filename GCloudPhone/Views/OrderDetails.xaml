<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GCloudPhone.Views.OrderDetails"
            
             xmlns:templates="clr-namespace:GCloudPhone.Views.Templates"
             Title="" NavigationPage.HasNavigationBar="False" Shell.NavBarIsVisible="False">
    
    <ScrollView>
        <Grid 
            RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto"
            RowSpacing="10" ColumnSpacing="10" ColumnDefinitions="Auto, *">
          

            <templates:BackButtonControl Grid.Row="0"/>

            <Label Text="Auftragsnummer:" Grid.Row="1" Grid.Column="0" FontSize="16" VerticalOptions="Center" Margin="10,0,0,0"/>
            <Label x:Name="OrderNumberLabel" Grid.Row="1" Grid.Column="1" FontSize="16" VerticalOptions="Center" />


            <!--<Label x:Name="QRCodeLabel" Grid.Row="2" IsVisible="false"
       Text="Bitte scannen Sie diesen QR-Code
                   an der Kasse, um Ihre Bestellung
                   zu erhalten, falls Sie dies
                   noch nicht getan haben!" 
       HorizontalOptions="Center" 
       VerticalOptions="Center" 
       TextColor="Black" 
       FontSize="16"
       MaxLines="3"
       LineBreakMode="TailTruncation" />-->



           

            <Label Text="Datum:" Grid.Row="3" Grid.Column="0" FontSize="16"  VerticalOptions="Center" Margin="10,0,0,0"/>
            <Label x:Name="DateLabel" Grid.Row="3" Grid.Column="1" FontSize="16"  VerticalOptions="Center"/>

            <Label Text="Bestellkommentar:" Grid.Row="4" Grid.Column="0" FontSize="16"  VerticalOptions="Center" Margin="10,0,0,0"/>
            <Label x:Name="OrderCommentLabel" Grid.Row="4" Grid.Column="1" FontSize="16"  VerticalOptions="Center"/>

            <Label Text="Bestellte Artikel:" Grid.Row="5" Grid.Column="0" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Start" Margin="10,0,0,5"/>

            <CollectionView x:Name="OrderItemsCollectionView" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" CornerRadius="5" Margin="5" Padding="10" BackgroundColor="White">
                            <VerticalStackLayout Spacing="5">
                                <Label Text="{Binding ProductName}" FontSize="Medium" FontAttributes="Bold" />
                                <Label Text="{Binding Quantity, StringFormat='Menge: {0}'}" FontSize="Small"/>
                                <Label Text="{Binding FormattedPrice}" FontSize="Small" TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ScrollView>
</ContentPage>