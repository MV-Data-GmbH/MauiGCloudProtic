<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GCloudPhone.Views.SendNotificationForm"
             xmlns:templates="clr-namespace:GCloudPhone.Views.Templates"
             xmlns:local="clr-namespace:GCloudPhone.Views"
             Title="" NavigationPage.HasNavigationBar="False" Shell.NavBarIsVisible="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="60*"></RowDefinition>
            <RowDefinition Height="32*"></RowDefinition>
        </Grid.RowDefinitions>

        <templates:BackButtonControl Grid.Row="0"/>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"></RowDefinition>
                <RowDefinition Height="25*"></RowDefinition>
                <RowDefinition Height="25*"></RowDefinition>
                <RowDefinition Height="25*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"></ColumnDefinition>
                <ColumnDefinition Width="84*"></ColumnDefinition>
                <ColumnDefinition Width="8*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Margin="15,10,0,0" Grid.Row="0" Grid.ColumnSpan="2" Text="Geben Sie den Inhalt der Benachrichtigung ein" FontSize="25" FontAttributes="Bold" />

            <VerticalStackLayout Grid.Row="1" Grid.Column="1" >
                <Entry x:Name="NotificationTitle" Placeholder="Titel der Benachrichtigung" Margin="10,0,0,0"/>
                <Border BackgroundColor="{StaticResource Primary}"/>
            </VerticalStackLayout>

            <Frame Grid.Row="2" Grid.Column="1" BorderColor="{StaticResource Primary}" BackgroundColor="White">
                <VerticalStackLayout  Grid.Row="2" Grid.Column="1"  Padding="10,0,0,10">
                    <Editor x:Name="NotificationBody" FontFamily="Quicksand"
                     Placeholder="Benachrichtigungstext"
                     HeightRequest="150"/>

                </VerticalStackLayout>
            </Frame>


            <Button Grid.Row="3" Grid.Column="1" HeightRequest="50" Text="Benachrichtigung senden" TextColor="White" Clicked="OnSendNotificationClicked"/>

        </Grid>

        <Label Grid.Row="2" Text="V.16.0.A" FontSize="9" HorizontalOptions="End" TextColor="Gray" VerticalOptions="End"/>

    </Grid>
</ContentPage>