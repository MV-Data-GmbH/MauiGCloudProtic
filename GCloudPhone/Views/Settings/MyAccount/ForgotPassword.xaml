<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:templates="clr-namespace:GCloudPhone.Views.Templates"
             x:Class="GCloudPhone.Views.Settings.MyAccount.ForgotPassword"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">
 

    <!-- Primer upotrebe Grid-a sa definisanim stilom -->
    <Grid 
        RowDefinitions="Auto,Auto,Auto,Auto"
        RowSpacing="20"
        Padding="{OnPlatform Android='20,30,20,0', Default='10,20,10,20'}">
     
            <templates:BackBtnText x:Name="myBackBtnText" 
                                   Grid.Row="0"/>
       

        
        <Label Grid.Row="1" 
               Text="Passwort Zurücksetzen" 
               Style="{StaticResource Headings}"
               HorizontalTextAlignment="Start"/>

        <!-- Dalji sadržaj u ostalim redovima -->
        <VerticalStackLayout Grid.Row="2">
            <Entry Placeholder="EMail" 
                   x:Name="emailEntry" Keyboard="Email"/>
            <Border/>
        </VerticalStackLayout>

        <Button Grid.Row="3" Grid.Column="1" 
                VerticalOptions="End" Text="PASSWORT ZURÜCKSETZEN"
            Style="{StaticResource PrimaryBtn}" Clicked="OnResetPasswordButtonClicked"/>

    </Grid>
</ContentPage>
